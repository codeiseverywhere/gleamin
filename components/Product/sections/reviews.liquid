
<section id="product-reviews" class="product-reviews">
  <div class="pr__inner">

    <div class="pr__header">
      <h4 class="pr__header-title">
        {{ section.settings.title }}
      </h4>
    </div>

    <div class="pr__widget-wrap">
      	<div 
          class="yotpo yotpo-main-widget" 
             data-product-id="{{ product.id }}" 
             data-name="{{ product.title | escape }}" 
             data-url="{{ shop.url }}{{ product.url }}" 
             data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" 
             data-description="{{ product.description | escape }}"></div>
    </div>

  </div>
</section>


{% schema %}
  {
    "name": "Reviews",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Nothing is one size fits all, read reviews from people just like you"
      }
    ]
  }
{% endschema %}
