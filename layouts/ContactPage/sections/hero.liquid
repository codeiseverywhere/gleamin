<div id="Contact-hero" class="Contact__hero">

  <div class="Contact__h-slider-container">
    <div id="Contact-Hero-Slider" class="Contact__h-slider">
      {% for block in section.blocks %}
        
        <div 
          id="Contact-Slide-{{ block.settings.title }}" 
          class="Contact__h-slide 
            {% if block.settings.orientation == 'horizontal' %}Contact__h-slide--horizontal{% endif %} 
            {% if block.settings.orientation == 'vertical' %}Contact__h-slide--vertical{% endif %}">
            <span data-orientation="
              {% if block.settings.orientation == 'vertical' %}VERTICAL{% endif %}
              {% if block.settings.orientation == 'horizontal' %}HORIZONTAL{% endif %}">
            </span>
          <div class="Contact__h-slide-inner">
            <img 
              src="{{ block.settings.image | img_url: 'master' }}" 
              class="Contact__h-slide-image 
              {% if block.settings.orientation == 'horizontal' %}Contact__h-slide-image--horizontal{% endif %}
              {% if block.settings.orientation == 'vertical' %}Contact__h-slide-image--vertical{% endif %}">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="Contact__h-header">
    <div class="Contact__h-title-highlight">
      <h2 class="Contact__h-title">
        {{ section.settings.title }}
      </h2>
    </div>
    <p class="Contact__h-text">
      {{ section.settings.text }}
      <a href="mailto:{{ section.settings.email }}" class="Contact__h-text-link">{{ section.settings.email }}</a>. For all business inquiries please contact
      <a href="mailto:{{ section.settings.business_email }}" class="Contact__h-text-link">{{ section.settings.business_email }}</a>
    </p>
  </div>

</div>

{% schema %}
  {
    "name": "Hero",
    "class": "Contact__h-section-margin",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Page Title",
        "default": "How can we help?",
        "info": "In this case a question"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Page sub text",
        "default": "Contact us using this form or email us at"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Email",
        "default": "support@gmail.com"
      },
      {
        "type": "text",
        "id": "business_email",
        "label": "Business Email",
        "default": "business@gmail.com"
      }
      
    ],
    "blocks": [
      {
        "type": "block-type",
        "name": "Block Name",
        "settings": [
          {
            "type": "select",
            "id": "orientation",
            "label": "Image Orientation",
            "options": [
              {
              "value": "horizontal",
              "label": "Horizontal"
              },
              {
              "value": "vertical",
              "label": "Vertical"
              }
            ],
            "default": "vertical"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Block Title",
            "default": "Block Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Hero Slide Image"
          }
        ]
      }
    ]
  }
{% endschema %}