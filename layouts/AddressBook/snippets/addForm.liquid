
<div id="Customer-add-form" class="Customer__address-form-wrap" data-state="hidden">

  <h4 class="Customer__address-form-title">Add A New Address</h4>

  {% form 'customer_address', customer.new_address %}

    <div class="Customer__address-form-row Customer__address-form-row--split">
      <div class="Customer__address-form-row-column">
        <label for="AddressFirstNameNew_{{ form.id }}">First Name</label>
        <input 
          type="text" 
          id="AddressFirstNameNew_{{ form.id }}" 
          name="address[first_name]" 
          value="{{ form.first_name }}">
      </div>
      <div class="Customer__address-form-row-column">
        <label for="AddressLastNameNew_{{ form.id }}">Last Name</label>
        <input 
          type="text" 
          id="AddressLastNameNew_{{ form.id }}" 
          name="address[last_name]" 
          value="{{ form.last_name }}">
      </div>
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressCompanyNew_{{ form.id }}">Company</label>
      <input 
        type="text" 
        id="AddressCompanyNew_{{ form.id }}" 
        name="address[company]" 
        value="{{ form.company }}">
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressAddress1New_{{ form.id }}">Address 1</label>
      <input 
        type="text" 
        id="AddressAddress1New_{{ form.id }}" 
        name="address[address1]" 
        value="{{ form.address1 }}">
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressAddress2New_{{ form.id }}">Address 2</label>
      <input 
        type="text" 
        id="AddressAddress2New_{{ form.id }}" 
        name="address[address2]" 
        value="{{ form.address2 }}">
    </div>

    <div class="Customer__address-form-row Customer__address-form-row--split">
      <div class="Customer__address-form-row-column">
        <label for="AddressCityNew_{{ form.id }}">City</label>
        <input type="text" id="AddressCityNew_{{ form.id }}" name="address[city]" value="{{ form.city }}">
      </div>
      <div class="Customer__address-form-row-column">
        <label for="AddressCityNew_{{ form.id }}">Country</label>
        <select 
          id="AddressCountryNew_{{ form.id }}" 
          name="address[country]" 
          data-default="{{ form.country }}">
            {{ all_country_option_tags }}
        </select>
      </div>
    </div>

    <div 
      id="AddressProvinceContainer_{{ form.id }}" 
      class="Customer__address-form-row" 
      style="display: none"
      >
      <label for="AddressProvinceNew_{{ form.id }}">Province</label>
      <select 
        id="AddressProvinceNew_{{ form.id }}" 
        name="address[province]"
        data-default="{{ form.province }}"></select>
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressZipNew_{{ form.id }}">Postal/Zip Code</label>
      <input 
        type="text" 
        id="AddressZipNew_{{ form.id }}" 
        name="address[zip]" 
        value="{{ form.zip }}" 
        autocapitalize="characters">
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressPhoneNew_{{ form.id }}">Phone Number</label>
      <input 
        type="tel" 
        id="AddressPhoneNew_{{ form.id }}" 
        name="address[phone]" 
        value="{{ form.phone }}">
    </div>

    <div class="Customer__address-form-row Customer__address-checkbox-wrap">
      {{ form.set_as_default_checkbox }}
      <label for="address_default_address_new">Set as default address</label>
    </div>

    <div class="Customer__address-form-btn-wrap">
      <button type="submit" class="Customer__address-submit-btn">
        Add Address
      </button>
      <div id="Customer-address-cancel-add" class="Customer__address-cancel-add-btn">
        <p>Cancel</p>
      </div>
    </div>

    

  {% endform %}
</div>