<section id="Press-awards" class="Press-awards">
  <article class="Press-a__content">

    {% for block in section.blocks %}
      {% if block.settings.kind == 'icon' %}
      <div class="Press-a__award">
        {% comment %}<img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt }}" class="Press-a__image">{% endcomment %}
        {% include 'responsive-image' image: block.settings.image, classes: 'Press-a__image' %}
      </div>
      {% endif %}
      {% if block.settings.kind == 'text' %}
        <div class="Press-a__textbox">
          <div class="Press-a__circle">
            <h4 class="Press-a__textbox-heading">
              {{ block.settings.heading }}
            </h4>
          </div>
          <p class="Press-a__textbox-text">
            {{ block.settings.text }}
          </p>
        </div>
      {% endif %}
    {% endfor %}

  </article>
</section>


{% schema %}
  {
    "name": "Awards",
    "settings": [
    ],
    "blocks": [
      {
        "type": "block_type",
        "name": "Block Name",
        "limit": 5,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Block Title for Organization Purposes",
            "default": "Block"
          },
          {
            "type": "select",
            "id": "kind",
            "label": "Choose what type of block this is",
            "options": [
              {
              "value": "icon",
              "label": "Icon"
              },
              {
              "value": "text",
              "label": "Text"
              }
            ],
            "default": "text"
          },
          {
            "type": "header",
            "content": "Image Settings"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image / Icon"
          },
          {
            "type": "text",
            "id": "alt",
            "label": "Award Image Alt Tag",
            "default": "Logo for.."
          },

          {
            "type": "header",
            "content": "Text Settings"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading For Text",
            "default": "Bold Heading"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Plain Text",
            "default": "Plain Text ..."
          }
        ]
      }
    ]
  }
{% endschema %}