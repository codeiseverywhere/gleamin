<section class="FAQ__5050-CTA" class="FAQ__5050-CTA" style="background-color: {{ section.settings.bg-color }}">
  <div class="FAQ50c--inner Site__page-width">

    <div class="FAQ50c__content">
      <div class="FAQ50c__column FAQ50c__column-image">
        <div class="FAQ50c__image-wrap">
          {% comment %}<img src="{{ section.settings.image-1 | img_url: 'master' }}" class="FAQ50c__image">{% endcomment %}
          {% include 'responsive-image' image: section.settings.image-1, classes: 'FAQ50c__image' %}
        </div>
        <div class="FAQ50c__image-wrap">
          {% comment %}<img src="{{ section.settings.image-2 | img_url: 'master' }}" class="FAQ50c__image">{% endcomment %}
          {% include 'responsive-image' image: section.settings.image-2, classes: 'FAQ50c__image' %}
        </div>
      </div>
      <div class="FAQ50c__column FAQ50c__column-text">
        <div class="FAQ50c__title-wrap">
          <h4 class="FAQ50c__title">
            {{ section.settings.title }}
          </h4>
        </div>
        <div class="FAQ50c__text-wrap">
          <p class="FAQ50c__text">
            {{ section.settings.text }}
          </p>
        </div>
        <div class="FAQ50c__cta-wrap">
          <a href="{{ section.settings.link }}" class="FAQ50c__cta Site__button-main">
            {{ section.settings.cta-text }}
          </a>
        </div>
      </div>
    </div>

  </div>
</section>

{% schema %}
  {
    "name": "FAQ 5050 CTA",
    "settings": [
      {
        "type": "color",
        "id": "bg-color",
        "label": "Section Background Color",
        "default": "#f5f5f5"
      },
      {
        "type": "image_picker",
        "id": "image-1",
        "label": "First Image"
      },
      {
        "type": "image_picker",
        "id": "image-2",
        "label": "Second Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Shop lorem ipsum dolor sit amet"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Section Text",
        "default": "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna."
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link for CTA"
      },
      {
        "type": "text",
        "id": "cta-text",
        "label": "Text for CTA"
      }
    ],
    "presets": [
      {
        "category": "Misc",
        "name": "FAQ 5050 CTA"
      }
    ]
  }
{% endschema %}