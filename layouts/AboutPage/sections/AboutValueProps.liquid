<section id="About-value-props" class="About-value-props">
  <article class="About-vp__content">
    
    <div class="About-vp__header">
      <h4 class="About-vp__title">
        {{ section.settings.title }}
      </h4>
    </div>

    <div class="About-vp__grid-container">
      <div class="About-vp__grid">
        {% for block in section.blocks %}
          <div class="About-vp__grid-item">
            <div class="About-vp__grid-item-content">
              {% if block.settings.type-of-prop == 'full-image' %}
                <div class="About-vp__image-wrap--full">
                 {% comment %} <img src="{{ block.settings.image | img_url: 'master' }}" class="About-vp__image">{% endcomment %}
                  {% include 'responsive-image' image: block.settings.image, classes: 'About-vp__image' %}
                </div>
              {% else %}
                <div class="About-vp__image-wrap--half">
                 {% comment %} <img src="{{ block.settings.image | img_url: 'master' }}" class="About-vp__image">{% endcomment %}
                  {% include 'responsive-image' image: block.settings.image, classes: 'About-vp__image' %}
                </div>
                <div class="About-vp__text-wrap">
                  <p class="About-vp__text">
                    {{ block.settings.text }}
                  </p>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

  </article>
</section>

{% schema %}
  {
    "name": "About Value Props",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Value props lorem ipsum dolor"
      }
    ],
    "blocks": [
      {
        "type": "ValueProp",
        "name": "Value Prop",
        "settings": [
          {
            "type": "select",
            "id": "type-of-prop",
            "options": [
                { "value": "image-with-text", "label": "Image and Text"},
                { "value": "full-image", "label": "Full Image"}
            ],
            "label": "Type of Grid Item",
            "info": "*If [Full Image] is selected, the image you select for this grid item will take up the full space."
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Value Prop Image"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Value Prop Text",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
          }
        ]
      }
    ]
  }
{% endschema %}