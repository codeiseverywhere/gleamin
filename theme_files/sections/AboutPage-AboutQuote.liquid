<section id="About-Quote" class="About-Quote">
  <article class="About-q__content">

    <div class="About-q__image-wrap">
     {% comment %} <img src="{{ section.settings.image | img_url: 'master' }}" class="About-q__image">{% endcomment %}
      {% include 'responsive-image' image: section.settings.image, classes: 'About-q__image' %}
    </div>

    <div class="About-q__quote-wrap">
      <p class="About-q__quote">
        “{{ section.settings.quote }}”
      </p>
    </div>

    <div class="About-q__attribution-wrap">
      <p class="About-q__attribution">
        {{ section.settings.attribution }}
      </p>
    </div>

  </article>
</section>


{% schema %}
  {
    "name": "About Quote",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Section Image"
      },
      {
        "type": "textarea",
        "id": "quote",
        "label": "Section Quote",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
      },
      {
        "type": "text",
        "id": "attribution",
        "label": "Section Attribution",
        "default": "John Doe, Store Owner"
      }
    ]
  }
{% endschema %}