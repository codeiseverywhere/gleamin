
<section id="About-Hero" class="About-Hero">
  <article class="About-Hero__content">

    <div class="About-ah__image-wrap">
      {% comment %}<img src="{{ section.settings.image | img_url: 'master' }}" class="About-ah__image">{% endcomment %}
      {% include 'responsive-image' image: section.settings.image, classes: 'About-ah__image' %}
    </div>

    <div class="About-ah__text-wrap">
      <span class="About-ah__text-box">
        <h3 class="About-ah__title">
          {{ section.settings.title }}
        </h3>
      </span>
    </div>

  </article>
</section>

{% schema %}
  {
    "name": "About Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Superfood beauty empowering life"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Hero Image"
      }
    ]
  }
{% endschema %}