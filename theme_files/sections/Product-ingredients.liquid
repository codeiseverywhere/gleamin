{% if product.metafields.product-page.ingredients-list.ingredients != blank %}

{% if section.settings.arrow-left != blank %}
<style>
  .product-ingredients .slick-prev::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    width: 26px;
    height: 26px;
    background: url({{ section.settings.arrow-left | img_url: 'master' }});
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
  }
  .product-ingredients .slick-next::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    width: 26px;
    height: 26px;
    background: url({{ section.settings.arrow-right | img_url: 'master' }});
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
  }
</style>
{% endif %}

<section id="product-ingredients" class="product-ingredients">
    <div class="pi__inner">
    
      <div class="pi__header">
        <h4 class="pi__header-title">
          {{ section.settings.header-title }}
        </h4>
        <p class="pi__header-text">
          {{ section.settings.header-text }}
        </p>
      </div>

      <div class="pi__content">
        <div class="pi__slider" data-slide="{{ product.metafields.product-page.ingredients-list.ingredients.size }}">
          {% for field in product.metafields.product-page.ingredients-list.ingredients %}
          {% assign loop = forloop.index %}
            <div class="pi__slide">
              <div class="pi__slide-text-box">
                <p class="pi__slide-title">{{ field.title }}</p>
                <h5 class="pi__slide-benefit">{{ field.benefit }}</h5>
                <ul class="pi__slider-desc-wrap">
                  {% for desc in field.descriptions %}
                    <li class="pi__slide-desc">{{ desc.text }}</li>
                  {% endfor %}
                </ul>
              </div>
              <div class="pi__slide-image">
              {% comment %}<img src="{{ field.image }}"  />{% endcomment %}
              {% include 'responsive-image' image: field.image %}
              </div>
            </div>
          {% endfor %}
        </div>

        {% comment %} <div class="pi__slider-nav-wrap">
          <div class="pi__slider-nav">
            {% for field in shop.metafields.global.ingredients-list.ingredients  %}
              <div class="pi__slide-nav"></div>
            {% endfor %}
          </div>
        </div> {% endcomment %}
      </div>
      
      <div class="pi__footer">
        <div class="pi__footer-content">
          <p class="pi__footer-title">{{ section.settings.footer-title-1 }}</p>
          <p class="pi__footer-text">{{ section.settings.footer-text-1 }}</p>
          <p class="pi__footer-title">{{ section.settings.footer-title-2 }}</p>
          <p class="pi__footer-text">{{ section.settings.footer-text-2 }}</p>
          <p class="pi__footer-title">{{ section.settings.footer-title-3 }}</p>
          <p class="pi__footer-text">{{ section.settings.footer-text-3 }}</p>
        </div>
      </div>

    </div>
</section>

{% endif %}


