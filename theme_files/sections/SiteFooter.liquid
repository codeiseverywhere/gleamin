  <div class="SiteFooter-border-top"></div>

  <div class="SiteFooter__top">
    <div class="SiteFooter-inner">
      <div class="SiteFooter__top-content">



      <div class="SiteFooter-top-content__row">

        <div class="SiteFooter-block__message">
          <h6 class="SiteFooter-message-title">{{ section.settings.footer-message-title }}</h6>
          <p class="SiteFooter-message-text">{{ section.settings.footer-message-text }}</p>
          <a href="{{ section.settings.footer-message-link }}" class="SiteFooter-message-link" style="color: {{ section.settings.message-link-color }}">
            <p class="SiteFooter-message-link-text">
              {{ section.settings.footer-message-link-text }}
            </p>
          </a>
        </div>

        <div class="SiteFooter-block__links">
          <div class="SiteFooter-block__links-inner">
            <div class="SiteFooter-block__links-list">
              <p class="SiteFooter-block__links-list-title">
                {{ section.settings.list-1-title }}
              </p>
              {% for link in linklists[section.settings.footer-link-list-1].links %}
                <a href="{{ link.url }}" class="SiteFooter-block__link">
                  <p class="SiteFooter-block__link-text">
                    {{ link.title }}
                  </p>
                </a>
              {% endfor %}
            </div>
            <div class="SiteFooter-block__links-list SiteFooter-block__links-list--middle">
              <p class="SiteFooter-block__links-list-title">
                {{ section.settings.list-2-title }}
              </p>
              <a class="SiteFooter-block__link"><p data-acsb-custom-trigger="true" class="SiteFooter-block__link-text">Accessibility</p></a>
              {% for link in linklists[section.settings.footer-link-list-2].links %}
                <a href="{{ link.url }}" class="SiteFooter-block__link">
                  <p class="SiteFooter-block__link-text {% if forloop.last %}SiteFooter-block__link-text-no-margin{% endif %}">
                    {{ link.title }}
                  </p>
                </a>
              {% endfor %}
            </div>
            <div class="SiteFooter-block__links-list">
              <p class="SiteFooter-block__links-list-title">
                {{ section.settings.list-3-title }}
              </p>
              {% for link in linklists[section.settings.footer-link-list-3].links %}
                <a href="{{ link.url }}" class="SiteFooter-block__link">
                  <p class="SiteFooter-block__link-text {% if forloop.last %}SiteFooter-block__link-text-no-margin{% endif %}">
                    {{ link.title }}
                  </p>
                </a>
              {% endfor %}
            </div>
            <div class="SiteFooter-block__links-list SiteFooter-block__link-list-mobile SiteFooter-block__link-list-mobile--first">
              <a class="SiteFooter-block__link"><p data-acsb-custom-trigger="true" class="SiteFooter-block__link-text">Accessibility</p></a>
              {% for link in linklists[section.settings.footer-link-list-1-mobile].links %}
                <a href="{{ link.url }}" class="SiteFooter-block__link">
                  <p class="SiteFooter-block__link-text {% if forloop.last %}SiteFooter-block__link-text-no-margin{% endif %}">
                    {{ link.title }}
                  </p>
                </a>
              {% endfor %}
            </div>
            <div class="SiteFooter-block__links-list SiteFooter-block__link-list-mobile SiteFooter-block__link-list-mobile--last">
              {% for link in linklists[section.settings.footer-link-list-2-mobile].links %}
