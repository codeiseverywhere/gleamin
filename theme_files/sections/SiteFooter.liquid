              {% endfor %}
            </div>
          </div>
        </div>

        <div class="SiteFooter-block__email SiteFooter-block__hide-mobile">
          <div class="SiteFooter-block__email-title-wrap">
            <div class="SiteFooter-block__email-title-hilight">
              <h3 class="SiteFooter-block__email-title">
                {{ section.settings.email-title }}
              </h3>
            </div>
          </div>
          <p class="SiteFooter-block__email-text">
            {{ section.settings.email-text }}
          </p>
          <form 
            id="email_signup" 
            class="SiteFooter-block__email-email-box" 
            action="//manage.kmail-lists.com/subscriptions/subscribe"
            novalidate="novalidate">

              <input type="hidden" name="g" value="NFDRmY">
              <input type="hidden" name="$fields" value="$consent">
              <input type="hidden" name="$list_fields" value="$consent">

            <div class="SiteFooter-block__email-input-wrap">
              <input 
                type="email" 
                name="email"
                id="k_id_email"
                placeholder="Enter e-mail address here.." 
                class="SiteFooter-block__email-input" />
            </div>
            <div class="SiteFooter-block__email-btn-wrap">
              <button type="submit" placeholder="Enter e-mail address here.." class="SiteFooter-block__email-btn">
                Subscribe
              </button>
            </div>
          </form>
          <script type="text/javascript" src="//www.klaviyo.com/media/js/public/klaviyo_subscribe.js"></script>
          <script type="text/javascript">
          try{

            KlaviyoSubscribe.attachToForms('#email_signup', {
              hide_form_on_success: true,
              extra_properties: {
                $source: '$embed',
                $method_type: "Klaviyo Form",
                $method_id: 'embed',
                $consent_version: 'Embed default text'
              }
            });
          } catch (err){
            console.log(err)
          }
          </script>
