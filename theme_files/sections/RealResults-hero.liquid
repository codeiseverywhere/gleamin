<section id="Real-Results-hero" class="Real-Results-hero">
  <article class="Real-Results-h__content">

			<div class="Real-Results-h__image-wrap">
				{% comment %}<img src="{{ section.settings.image | img_url: 'master' }}" class="Real-Results-h__image">{% endcomment %}
        {% include 'responsive-image' image: section.settings.image, classes: 'Real-Results-h__image' %} 
			</div>
			<div class="Real-Results-h__text-box">
				<div class="Real-Results-h__title-wrap">
					<h3 class="Real-Results-h__title">
						{{ section.settings.title }}
					</h3>
				</div>
					<p class="Real-Results-h__description hp50c__text-wrap">
						{{ section.settings.text }}
					</p>
          		<div class="hp50c__cta-wrap">
            		<a href="/products/mask" class="hp50c__cta Site__button-main">
            		  Shop the Mask
           			 </a>
        		</div>
			</div>

  </article>
</section>


{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Real Results"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Section Text",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt."
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Hero Image"
      }
    ]
  }
{% endschema %}