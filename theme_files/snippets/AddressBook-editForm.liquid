
<div id="Customer-add-form-{{ forloop.index }}" class="Customer__address-form-wrap {% if forloop.last %}Customer__address-form-wrap--last{% endif %}" data-state="hidden">

  <h4 class="Customer__address-form-title">Edit Address</h4>

  {% form 'customer_address', address %}

    <div class="Customer__address-form-row Customer__address-form-row--split">
      <div class="Customer__address-form-row-column">
        <label for="AddressFirstName_{{ form.id }}">First Name</label>
        <input 
          type="text" 
          id="AddressFirstName_{{ form.id }}" 
          name="address[first_name]" 
          value="{{ form.first_name }}">
      </div>
      <div class="Customer__address-form-row-column">
        <label for="AddressLastName_{{ form.id }}">Last Name</label>
        <input 
          type="text" 
          id="AddressLastName_{{ form.id }}" 
          name="address[last_name]" 
          value="{{ form.last_name }}">
      </div>
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressCompany_{{ form.id }}">Company</label>
      <input 
        type="text" 
        id="AddressCompany_{{ form.id }}" 
        name="address[company]" 
        value="{{ form.company }}">
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressAddress1_{{ form.id }}">Address 1</label>
      <input 
        type="text" 
        id="AddressAddress1_{{ form.id }}" 
        name="address[address1]" 
        value="{{ form.address1 }}">
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressAddress2_{{ form.id }}">Address 2</label>
      <input 
        type="text" 
        id="AddressAddress2_{{ form.id }}" 
        name="address[address2]" 
        value="{{ form.address2 }}">
    </div>

    <div class="Customer__address-form-row Customer__address-form-row--split">
      <div class="Customer__address-form-row-column">
        <label for="AddressCity_{{ form.id }}">City</label>
        <input type="text" id="AddressCity_{{ form.id }}" name="address[city]" value="{{ form.city }}">
      </div>
      <div class="Customer__address-form-row-column">
        <label for="AddressCity_{{ form.id }}">Country</label>
        <select 
          id="AddressCountry_{{ form.id }}" 
          class="AddressCountrySelect"
          name="address[country]" 
          data-default="{{ form.country }}">
            {{ all_country_option_tags }}
        </select>
      </div>
    </div>

    <div 
      id="AddressProvinceContainer_{{ form.id }}" 
      class="Customer__address-form-row Customer__address-province" 
      data-formid="{{ form.id }}"
      >
      <label for="AddressProvince_{{ form.id }}">Province</label>
      <select 
        id="AddressProvince_{{ form.id }}" 
        name="address[province]"
        data-default="{{ form.province }}"></select>
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressZip_{{ form.id }}">Postal/Zip Code</label>
      <input 
        type="text" 
        id="AddressZip_{{ form.id }}" 
        name="address[zip]" 
        value="{{ form.zip }}" 
        autocapitalize="characters">
    </div>

    <div class="Customer__address-form-row">
      <label for="AddressPhone_{{ form.id }}">Phone Number</label>
      <input 
        type="tel" 
        id="AddressPhone_{{ form.id }}" 
        name="address[phone]" 
        value="{{ form.phone }}">
    </div>

    <div class="Customer__address-form-row Customer__address-checkbox-wrap">
      {{ form.set_as_default_checkbox }}
      <label for="address_default_address_new">Set as default address</label>
    </div>

    <div class="Customer__address-form-btn-wrap">
      <button type="submit" class="Customer__address-submit-btn">
        Update Address
      </button>
      <div id="Customer-address-cancel-{{ forloop.index }}" class="Customer__address-cancel-add-btn Customer__address-cancel-edit">
        <p>Cancel</p>
      </div>
    </div>

  {% endform %}
</div>